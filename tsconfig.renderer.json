{
    "compilerOptions": {
        "module": "none",
        "esModuleInterop": true,
        "target": "ES2018",
        "noImplicitAny": true,
        "sourceMap": true,
        "removeComments" : true,
        "skipLibCheck": true,
        "baseUrl" : "./dist/",
        "outDir": "./dist/renderer/",
        "rootDir" : "./src/renderer/",
        "typeRoots": ["node_modules/@types"],
        "lib" : [ 
            "ES2017",
            "ES2016",
            "ES2018",
            "dom" 
        ],
        "paths" : {
        }

    },
    "exclude" : [
        "./scripts",
        "./docs",
        "./node_modules",
        "./dist",
        "./releases",
        "./proto_imagetosound-nw",
        "./test",
        "./src/main/"
    ]
}
